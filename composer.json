{
    "name"              : "afup/aperophp",
    "description"       : "Source code for aperophp.net website",
    "license"           : "GPL-3.0+",
    "minimum-stability" : "dev",
    "require": {
        "silex/silex"               : "1.0.*",
        "doctrine/common"           : "2.4.*",
        "doctrine/dbal"             : "2.4.*",
        "twig/twig"                 : "1.44.*",
        "twig/extensions"           : "dev-master",
        "symfony/class-loader"      : "2.1.x",
        "symfony/form"              : "2.1.x",
        "symfony/validator"         : "2.1.x",
        "symfony/translation"       : "2.1.x",
        "symfony/config"            : "2.1.x",
        "symfony/browser-kit"       : "2.1.x",
        "symfony/console"           : "2.1.x",
        "symfony/css-selector"      : "2.1.x",
        "symfony/twig-bridge"       : "2.1.x",
        "swiftmailer/swiftmailer"   : "4.2.*",
        "twbs/bootstrap"            : "2.0.4",
        "FortAwesome/Font-Awesome"  : "~3.2",
        "mheap/Silex-Gravatar"      : "master",
        "Gravatar/Gravatar"         : "master",
        "michelf/php-markdown"      : "1.3.x-dev",
        "tijsverkoyen/akismet"      : "1.1.0",
        "dms/meetup-api-client": "^2.0",
        "atoum/stubs": "^2.5"
    },
    "require-dev": {
        "atoum/atoum"               : "dev-master"
    },
    "autoload": {
        "psr-0": {
            "Aperophp": "src/",
            "Gravatar": "vendor/Gravatar/Gravatar/src/"
        },
        "classmap": ["vendor/mheap/Silex-Gravatar/src/SilexGravatar/GravatarExtension.php"]
    },
    "repositories": [
        {
            "type": "package",
            "package": {
                "version": "2.0.4",
                "name": "twbs/bootstrap",
                "source": {
                    "url": "https://github.com/twbs/bootstrap.git",
                    "type": "git",
                    "reference": "master"
                },
                "dist": {
                    "url": "https://github.com/twbs/bootstrap/zipball/v2.0.4",
                    "type": "zip"
                 }
            }
        },
        {
            "type": "package",
            "package": {
                "version": "master",
                "name": "mheap/Silex-Gravatar",
                "source": {
                    "url": "https://github.com/mheap/Silex-Gravatar.git",
                    "type": "git",
                    "reference": "master"
                },
                "dist": {
                    "url": "https://github.com/mheap/Silex-Gravatar/zipball/master",
                    "type": "zip"
                }
            }
        },
        {
            "type": "package",
            "package": {
                "name": "Gravatar/Gravatar",
                "version": "master",
                "source": {
                    "url": "https://github.com/sveneisenschmidt/Gravatar-php.git",
                    "type": "git",
                    "reference": "master"
                },
                "dist": {
                    "url": "https://github.com/sveneisenschmidt/Gravatar-php/zipball/master",
                    "type": "zip"
                }
            }
        }
    ]
}
