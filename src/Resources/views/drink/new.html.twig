{% extends "layout.html.twig" %}

{% form_theme form 'common/Form/fields.html.twig' %}

{% block content %}
<div class="span6 offset3">
    <div class="widget widget-nopad">
        <div class="widget-header">
            <i class="icon-glass"></i>
            <h3>Organiser un ap&eacute;ro</h3>
        </div> <!-- /widget-header -->
        <div class="widget-content">
            <form method="post" action="{{ url('_newdrink') }}" class="form-horizontal" {{ form_enctype(form) }}>
                {{ form_errors(form) }}
                <fieldset>
                    <div class="control-group">
                        <label for="drink_dayselector" class="control-label required">Jour</label>
                        <div class="controls">
                            <input type="text" required="required" id="drink_dayselector">
                        </div>
                    </div>
                    <div class="control-group {% if form.hour.vars.errors|length %}error{% endif %}">
                        {{ form_label(form.hour, null, { 'label_attr': {'class': 'control-label'} }) }}
                        <div class="controls">
                            {{ form_widget(form.hour) }}
                            {{ form_errors(form.hour) }}
                        </div>
                    </div>
                    <div class="control-group {% if form.description.vars.errors|length %}error{% endif %}">
                        {{ form_label(form.description, null, { 'label_attr': {'class': 'control-label'} }) }}
                        <div class="controls">
                            {{ form_widget(form.description) }}
                            {{ form_errors(form.description) }}
                        </div>
                    </div>
                    <div class="control-group {% if form.city_id.vars.errors|length %}error{% endif %}">
                        {{ form_label(form.city_id, null, { 'label_attr': {'class': 'control-label'} }) }}
                        <div class="controls">
                            {{ form_widget(form.city_id) }}
                            {{ form_errors(form.city_id) }}
                        </div>
                    </div>
                    <div class="control-group {% if form.kind.vars.errors|length %}error{% endif %}">
                        {{ form_label(form.kind, null, { 'label_attr': {'class': 'control-label'} }) }}
                        <div class="controls">
                            {{ form_widget(form.kind) }}
                            {{ form_errors(form.kind) }}
                        </div>
                    </div>
                    <div class="control-group">
                        <label for="drink_placegmap" class="control-label required">Lieu</label>
                        <div class="controls">
                            <p><input type="text" required="required" id="drink_placegmap" onblur="setTimeout(checkMaps,50);"/></p>
                            <p><input type="text" class="input-xlarge disabled" disabled="" id="drink_place_disabled"></p>
                            <p><input type="text" class="input-xlarge disabled" disabled="" id="drink_address_disabled"></p>
                        </div>
                    </div>
                    {{ form_rest(form) }}
                    <div class="form-actions">
                        <button class="btn btn-primary" type="submit" name="create">Cr&eacute;er</button>
                        <button class="btn" type="reset">Annuler</button>
                    </div>
                </fieldset>
            </form>
        </div>
    </div>
</div>
{% endblock %}

{% block bottomjs %}
<script src="http://maps.googleapis.com/maps/api/js?sensor=false&libraries=places" type="text/javascript"></script>
<script src="{{ app.request.basepath }}/js/gmap.autocomplete.js" type="text/javascript"></script>
<script src="{{ app.request.basepath }}/js/datepicker.js" type="text/javascript"></script>
<script>
    // Date picker for Day field.
    init_datepicker($('#drink_dayselector'), $('#drink_day'));
</script>
{% endblock %}
